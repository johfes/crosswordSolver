{% extends 'base.html.twig' %}

{% block body %}

  <!-- Page Content -->
      <div class="row">
        <div class="col-md-12">
          <h1 class="page-header">CrosswordSolver</h1>
        </div>
        <div class="col-md-12">
          <form role="form" action = "{{ path('execute_search') }}" method="post">
                <div class="form-group">
                  <label for="word">Search for a word</label>
                  <input id="word" name="form[word]" class="form-control" placeholder="Enter your word here" value="">
                </div>
                <p class="help-block">Enter "-" for every missing letter.</p>
            <button type="submit" class="btn btn-primary">Search</button>
          </form>
        </div>
        <!-- /.col-md-12 -->
          <br />
          <div class="row">
              {% for label, messages in app.flashes %}
                  {% for message in messages %}
                      <div class="col-md-12 alert alert-{{ label }}">
                          {{ message }}
                      </div>
                  {% endfor %}
              {% endfor %}
          </div>
          <br />
          <div class="row">
              <div class="col-md-12">
                  {% if mode == 'execute' %}
                      {% if words %}
                          <div class="table-responsive">
                              <table class="table table-striped table-bordered table-hover">
                                  <thead>
                                  </thead>
                                  <tbody>
                                  {% for word in words %}
                                      <tr>
                                          <td>{{ word.word }}</td>
                                      </tr>
                                  {% endfor %}
                                  </tbody>
                              </table>
                          </div>
                      {% else %}
                          <div class="col-md-12 alert alert-info">
                              No words found!
                          </div>
                      {% endif %}
                  {% endif %}
              </div>
              <!-- /.col-md-12 -->
          </div>
      </div>
      <!-- /.row -->
{% endblock %}
